							<exclude>1</exclude>
							<onChange>reload</onChange>
							<label>LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.nivoTheme</label>
							<config>
								<type>select</type>
								<size>1</size>
								<maxitems>1</maxitems>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.from_ts</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
								</items>
                                <itemsProcFunc>TYPO3Extension\Imagecycle\Backend\ItemsProcFunc->getThemesNivo</itemsProcFunc>
								<renderType>selectSingle</renderType>
							</config>
						</TCEforms>
					</nivoTheme>
					<imagewidth>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.imagewidth</label>
							<config>
								<type>input</type>
								<size>16</size>
								<max>16</max>
								<eval>nospace</eval>
							</config>
						</TCEforms>
					</imagewidth>
					<imageheight>
