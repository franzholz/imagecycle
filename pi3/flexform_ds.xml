							<label>LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.thumbwidth</label>
							<config>
								<type>input</type>
								<size>16</size>
								<max>16</max>
								<eval>nospace</eval>
							</config>
						</TCEforms>
					</thumbwidth>
					<thumbheight>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.thumbheight</label>
							<config>
								<type>input</type>
								<size>16</size>
