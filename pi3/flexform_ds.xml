								<type>input</type>
								<size>5</size>
								<max>5</max>
								<eval>integer</eval>
							</config>
						</TCEforms>
					</nivoSlices>
					<nivoBoxCols>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:imagecycle/locallang_db.xml:tt_content.pi_flexform.nivoBoxCols</label>
