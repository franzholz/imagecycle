							<config>
								<type>select</type>
								<size>12</size>
								<maxitems>100</maxitems>
								<multiple>1</multiple>
                                <itemsProcFunc>TYPO3Extension\Imagecycle\Backend\ItemsProcFunc->getEffectsNivo</itemsProcFunc>
